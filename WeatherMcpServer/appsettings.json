{
  "WeatherProviders": {
    "OpenWeather": {
      "BaseUrl": "https://api.openweathermap.org/data/2.5/",
      "ApiKeyEnvVar": "OPENWEATHER_API_KEY",
      "Weight": 100,
      "Priority": 1
    },
    "MockProvider": {
      "BaseUrl": "https://mock.weather.local/",
      "ApiKeyEnvVar": "MOCK_API_KEY",
      "Weight": 50,
      "Priority": 2
    }
  },
  "HttpClientPolicies": {
    "RetryCount": 3,
    "RetryBaseDelaySeconds": 2,
    "CircuitBreakerAllowedErrors": 5,
    "CircuitBreakerDurationSeconds": 30
  }
}